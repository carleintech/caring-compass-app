{
  "name": "caring-compass-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Caring Compass Home Care Management Platform",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:web": "pnpm --filter web lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm --filter web type-check",
    "db:generate": "pnpm --filter database generate",
    "db:migrate": "pnpm --filter database migrate",
    "db:studio": "pnpm --filter database studio",
    "test": "echo No tests yet && exit 0",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@eslint/js": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,md,css,scss}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix"
    ]
  }
}
