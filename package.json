{
  "name": "caring-compass-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Caring Compass Home Care Management Platform",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm run build:packages && pnpm --filter web build",
    "build:packages": "pnpm --filter @caring-compass/database build && pnpm --filter @caring-compass/auth build && pnpm --filter @caring-compass/api build && pnpm --filter @caring-compass/services build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "test": "pnpm --recursive test",
    "test:ci": "pnpm --recursive test:ci",
    "test:coverage": "pnpm --recursive test:coverage",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules/.cache",
    "db:generate": "pnpm --filter @caring-compass/database generate",
    "db:migrate": "pnpm --filter @caring-compass/database migrate",
    "db:studio": "pnpm --filter @caring-compass/database studio",
    "db:seed": "pnpm --filter @caring-compass/database seed",
    "services:worker": "pnpm --filter @caring-compass/services worker",
    "services:health": "pnpm --filter @caring-compass/services health",
    "services:queues": "pnpm --filter @caring-compass/services queues",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "validate:frontend": "node scripts/validate-frontend.cjs"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@eslint/js": "^9.33.0",
    "@logtail/node": "^0.5.5",
    "@logtail/winston": "^0.5.5",
    "@playwright/test": "^1.54.2",
    "@sentry/nextjs": "^10.5.0",
    "@storybook/addon-a11y": "^9.1.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-c8": "^0.33.0",
    "autocannon": "^8.0.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "chai": "^5.3.1",
    "cypress": "^14.5.4",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "glob": "^10.3.10",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lighthouse": "^12.8.1",
    "lighthouse-ci": "^1.13.1",
    "lint-staged": "^15.2.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.54.2",
    "prettier": "^3.3.0",
    "snyk": "^1.1298.3",
    "vitest": "^3.2.4",
    "winston": "^3.11.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,md,css,scss}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "bull": "^4.16.5",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "ioredis": "^5.3.2",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "qrcode": "^1.5.4",
    "redis": "^5.8.2",
    "speakeasy": "^2.0.0"
  }
}
